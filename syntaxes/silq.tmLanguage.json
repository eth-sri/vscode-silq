{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Silq",
    "patterns": [{
        "include": "#keywords"
    },{
        "include": "#strings"
    },{
        "include": "#comment"
    },{
        "include": "#support"
    }],
    "repository": {
        "support": {
            "patterns": [{
                "match": "\\b(measure|H|phase|rotX|rotY|rotZ|X|Y|Z|dup|array|vector|forget)\\(",
                "captures": {
                    "1": {
                        "name": "support.function.silq"
                    }
                }
            },
            {
                "match": "(ùüô|ùîπ|‚Ñï|‚Ñ§|‚Ñö|‚Ñù)",
                "name": "support.type.silq"
            }]
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.control.silq",
                "match": "\\b(dat|def|true|false|if|then|else|observe|assert|return|repeat|for|while|in|cobserve|import|Œ†|Pi|quantum|const|lifted|qfree|mfree|Œª|lambda|forget|as|coerce|pun)\\b"
            }]
        },
        "strings": {
            "name": "string.quoted.double.silq",
            "begin": "\"",
            "end": "\"",
            "patterns": [{
                "name": "constant.character.escape.silq",
                "match": "\\\\."
            }]
        },
        "comment": {
            "patterns": [{
                "include": "#block-comment"
            },{
                "include": "#line-comment"
            },{
                "include": "#nesting-block-comment"
            }]
        },
        "block-comment": {
            "patterns": [{
                "begin": "/\\*",
                "end": "\\*/",
                "name": "comment.block.silq"
            }]
        },
        "line-comment": {
            "patterns": [{
                "match": "//.*$",
                "name": "comment.line.silq"
            }]
        },
        "nesting-block-comment": {
            "patterns": [{
                "begin": "/\\+",
                "end": "\\+/",
                "name": "comment.block.nesting.silq",
                "patterns": [{
                    "include": "#nesting-block-comment"
                }]
            }]
        }
    },
    "scopeName": "source.silq"
}
